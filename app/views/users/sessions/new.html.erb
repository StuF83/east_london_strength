<section class="page-signin">
  <div class="container">
    <h1 class="page-title">Admin Sign In</h1>

    <div class="signin-content">
      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "signin-form" do |form| %>
        <div class="form-group">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
        </div>

        <div class="form-group">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, autocomplete: "current-password", class: "form-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-group--checkbox">
            <%= form.check_box :remember_me, class: "form-checkbox" %>
            <%= form.label :remember_me, "Remember me", class: "form-label form-label--checkbox" %>
          </div>
        <% end %>

        <div class="form-actions">
          <%= form.submit "Sign in", class: "btn" %>
        </div>
      <% end %>

      <% if devise_mapping.recoverable? %>
        <div class="signin-links">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
      <% end %>
    </div>
  </div>
</section>